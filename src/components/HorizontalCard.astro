---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%] my-2"
>
  <a href={url} target={target}>
    <div
      class="hero-content flex-col md:flex-row bg-base-300 rounded-lg bg-opacity-30"
    >
      {
        img && (
          <img
            src={img}
            alt={title}
            class="max-w-full md:max-w-[13rem] max-h-[10rem] min-w-[13rem] rounded-lg w-full"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {
            badge && (
              <div class="badge badge-secondary mx-2 relative bottom-0.5">
                {badge}
              </div>
            )
          }
        </h1>
        <p class="py-1 text-1xl text-justify">{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => <div class="badge badge-outline">{tag}</div>)
          }
        </div>
      </div>
    </div>
  </a>
</div>
